<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speech to Speech Translator"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:paddingBottom="20dp" />

        <!-- Language A -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language A (Input)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinnerLangA"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#EEEEEE"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Language B -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language B (Output)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinnerLangB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#EEEEEE"
            android:padding="8dp"
            android:layout_marginBottom="20dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Start Speaking"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#2E7D32"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Stop | Translate"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#C62828"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Status -->
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <!-- Recognized Speech -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recognized Speech (Language A)"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtLangA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:background="#EEEEEE"
            android:textColor="#000000"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Translated Speech -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translated Speech (Language B)"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtLangB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:background="#EEEEEE"
            android:textColor="#000000"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>
